<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title_url="http://oit.duke.edu" title="VIVO Social" scrolling="true" height="320" author="Jeremy Bandini"
	author_location="Durham, NC USA" author_affiliation="Duke University" author_email="jeremy.bandini@duke.edu"
	description="View VIVO data">
		<Require feature="views" />
		<Require feature="tabs"/>
		<Require feature="setprefs"/>
		<Require feature="dynamic-height"/>
		<Require feature="settitle"/>
		<Require feature="minimessage" />
	</ModulePrefs>
	<!-- <UserPref name="lastSearch"
	display_name="Recent Search"
	datatype="enum"
	default_value="0">
	<EnumValue value="0" display_value="Search"/>
	<EnumValue value="1" display_value="Visualizations"/>
	<EnumValue value="2" display_value="Following"/>
	</UserPref> -->
	<UserPref name="searchList" display_name="Recent Search Terms" datatype="hidden" />
	<UserPref name="readList" display_name="list of read items" datatype="hidden" />
	<Content type="html" view="home,profile,canvas,default">
		<![CDATA[
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js" type="text/javascript"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js" type="text/javascript"></script>
		<script src="http://static.calendar.duke.edu/vivo_social/app.js" type="text/javascript"></script>

		<script type="text/javascript">
		// var msg = new gadgets.MiniMessage(__MODULE_ID__);
		$(function() { initialize(); });
		</script>
		<style type="text/css">
		p {padding:2px;margin:0 }
		li{ list-style-type:none;padding:10px;border-bottom:solid 1px #CCC}
		ul{ padding:0;margin:0}
		h4{ padding:0; margin:0; font-size:1.2em; }
		#searchContainer {
		padding-bottom:8px;
		border-bottom:solid 1px #333;
		color:#FFF;
		background-image: url('http://static.calendar.duke.edu/vivo_social/headerbg.gif');
		padding:0 0 7px 7px;
		border-bottom:solid 2px #FFF;
		
			
		
		}
		
		#showSearch, #hideSearch, #refreshHistory, #clearAllHistory {
		border-bottom:solid 1px #2485AE;
		border-left:solid 1px #2485AE;
		background-color:#FFF;cursor:pointer;float:right;padding:4px;
		opacity:0.6;
		-moz-border-radius-bottomleft: 9px;

		border-bottom-left-radius: 8px;
		color:#2485AE;
		font-weight:bold
		}
		#clearAllHistory {
		-moz-border-radius-bottomright: 9px;

		border-bottom-right-radius: 8px;
		}
		#search, #follow, #history { font-size:.8em }
		a { text-decoration:none;color:#2485AE;margin-right:20px}
		 a:visited {color:#2485AE}
		 a:hover { text-decoration:none;text-decoration:underline }
		#main { background-color: #F3F3F0}
		.read_list {padding:6px; display:block;float: right;}
		.unread {font-weight:bold}
		#readHistory, #searchHistory {
		font-size:1em;
		}
		#results_header, .header {
		font-size:1.1em;
		background-image: url('http://static.calendar.duke.edu/vivo_social/headerbg.gif');
		color:#FFF;
		-moz-border-radius-bottomleft: 8px;

		border-bottom-left-radius: 8px;
		-moz-border-radius-bottomright: 8px;

		border-bottom-right-radius: 8px;
		

		}
		.tablib_unselected {
		background-image: url('http://static.calendar.duke.edu/vivo_social/taboff.gif');
		padding: 3px 0px;
		background-color: #85C13D;
		/*  border: 1px solid #273d6c;
		border-bottom-color: #676767;*/
		border:none;
		color: #FFF;
		width: 80px;
		cursor: pointer;
		}
		.tablib_selected {
		background-image: url('http://static.calendar.duke.edu/vivo_social/tab.gif');
		padding: 3px 0px;
		/* background-color: #273d6c;*/
		/* border: 1px solid #000;*/
		border:none;
		border-bottom-width: 0px;
		color: #FFF;
		font-weight: bold;
		width: 80px;
		cursor: default;
		}
		.group {
			font-weight:bold;
			border-bottom:solid 2px #CCC;
			font-size:1.1em
		}
		.result_summary{
			font-weight:normal;
			font-size:.9em;
			
		}
		#result_summary_container li {
			display:inline;
			
			border:none
		}
		.summary_header {
			font-weight:bold;
			display:block
		}
		</style>
		<div id="main">
		<div id="search">
		<div style="display:none" id="showSearch">New Search</div>
		<div id="searchContainer">
		<div id="hideSearch">Hide</div>

		<p>Enter Search Term</p>
		<input type="text" name="searchTerm" />

		<button id="searchButton" type="button" name="startSearch">Save</button>
		</div>
		<div id="loading" style="display:none"><img src="http://static.calendar.duke.edu/vivo_social/ajax-loader.gif" /></div>
		<div><ul style="display:none" id="results"></ul></div>
		</div>
		<div style="display:none" id="visi">visualization</div>
		<div style="display:none" id="follow"><ul><li class="header">Currently Following</li><li>You are not following anyone.</li></ul></div>
		<div style="display:none" id="history">
			 <div id="refreshHistory" href="#">Show latest history</div>
			 <div id="clearAllHistory">Clear All History</div>
		<ul>
		<li class="header">Search History</li>
		<li><div id="searchHistory"></div></li>
		<li style="display:none"><div id="readHistory"></div></li>
		</ul>

		</div>
		</div>

		]]>
	</Content>
