# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /builder/                               Builder.index
# VIVO Widget API Routes


# Publications - JSONP
GET /people/{vivoId}/publications/5.jsonp         People.publicationsStub(items:'5',format:'js')
GET /people/{vivoId}/publications/10.jsonp        People.publicationsStub(items:'10',format:'js')
GET /people/{vivoId}/publications/15.jsonp        People.publicationsStub(items:'15',format:'js')
GET /people/{vivoId}/publications/all.jsonp       People.publicationsStub(format:'js')

# Publications - JS (document writes)
GET /people/{vivoId}/publications/5.js         People.publications(items:'5',format:'js')
GET /people/{vivoId}/publications/10.js        People.publications(items:'10',format:'js')
GET /people/{vivoId}/publications/15.js        People.publications(items:'15',format:'js')
GET /people/{vivoId}/publications/all.js       People.publications(format:'js')

# Publications - HTML
GET /people/{vivoId}/publications.html            People.publications(format:'html')

# Home page

GET     /                                       staticDir:public

# Catch all
# *       /{controller}/{action}                  {controller}.{action}
